<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/country_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wpisz nazwę kraju Europy"
        android:inputType="text"/>


    <Button
        android:id="@+id/show_flag_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokaż flagę"
        android:layout_below="@id/country_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/flag_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/show_flag_button"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="199dp"
        android:layout_height="208dp"
        android:layout_below="@+id/flag_image"
        android:layout_alignEnd="@+id/flag_image"
        android:layout_alignBottom="@+id/flag_image"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-268dp"
        android:visibility="visible"
        tools:visibility="visible" />

</RelativeLayout>




